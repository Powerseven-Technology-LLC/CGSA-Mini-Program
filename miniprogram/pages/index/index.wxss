/* pages/index/index.css */
.swiper-container {
	width: 100%;
}
.swiper {
	width: 100%;
	height: 340rpx;
}
.swiper-image {
	width: 100%;
}
.content-container {
	padding: 15rpx 30rpx;
}
.button-panel-container {
	background-color: #ffffff;
	padding: 50rpx 30rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	border-radius: 0.4rem;
	box-shadow: 0 0 15px -10px #7f88ff;
}
.panel-row {
    width: 100%;
    display: flex;
    justify-content: space-around;
}
.blank-between-panel-row {
    height: 75rpx;
}
.panel-button {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.panel-image {
    height: 90rpx;
    width: 90rpx;
    border-radius: 1.25rem;
}
.panel-text {
    margin-top: 10rpx;
    font-size: 0.8rem;
}
.button-row-container {
	padding: 15rpx 0;
	display: flex;
	justify-content: space-between;
}
.button-row-button {
    padding: 30rpx 0;
    width: 48%;
    display: flex;
    justify-content: space-evenly;
    background: linear-gradient(to right, #fff4ef, #ffe9e0);
    border-radius: 0.4rem;
    box-shadow: 0 0 15px -10px #7f88ff;
}
.button-row-text {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.button-row-title {
    font-weight: bold;
}
.button-row-subtitle {
    font-size: 0.9rem;
    color: #8294af;
}
.button-row-image {
    width: 130rpx;
    height: 100rpx;
}
.text-row-container {
	margin: 25rpx 0;
	padding: 0 10rpx;
	border-left: 2px #f8c68d solid;
}
.text-row-text {
	font-size: 0.95rem;
	color: #999999;
}
.posts-container {
	margin-top: 50rpx;
}
.post-container {
	height: 160rpx;
	margin: 20rpx 0;
	padding: 40rpx 25rpx;
	display: flex;
	background-color: #ffffff;
	border-radius: 0.4rem;
	box-shadow: 0 0 15px -10px #7f88ff;
}
.post-image-container {
	flex: 1;
}
.post-image {
	width: 100%;
	height: 100%;
}
.post-blank-space {
	flex: 0.1;
}
.post-text-container {
	flex: 1.85;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	font-family: 'Times New Roman', Times, sans-serif;
}
.post-title {
	line-height: 1.5rem;
	display: -webkit-box;
	overflow: hidden;
	text-overflow: ellipsis;
	word-wrap: break-word;
	white-space: normal !important;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.post-date {
	font-size: 0.9rem;
	color: #999999;
}
