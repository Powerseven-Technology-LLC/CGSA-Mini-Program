/* pages/events/index.wxss */
.tabs {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 14px;
  background-color: #CCC;
  vertical-align: middle;
  white-space: nowrap;
}

.tabs .tab-item {
  display: inline-block;
  margin: 0rpx 30rpx;
}

.tabs .tab-item.active {
  color: rgb(48, 121, 255);
  border-bottom: 4rpx solid #F00;
  line-height: 52rpx;
}

.swiper {
  height: calc(100vh - 60rpx);
  background-color: #00b26a;
  font-size: 14px;
}