/* pages/mine/index.wxss */
.container {
  padding: 0 35rpx;
  display: flex;
  flex-direction: column;
}

.promotion-card {
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  width: 100%;
  height: 300rpx;
  position: relative;
  border-radius: 0.4rem;
  box-shadow: 0 0 15px -10px #7f88ff;
}

.promotion-card-bg {
  width: 100%;
  height: 300rpx;
  position: absolute;
  border-radius: 0.4rem;
}

.promotion-card-content {
  width: 100%;
  height: 300rpx;
  position: absolute;
  display: flex;
  z-index: 1;
}

.card-container {
  width: 100%;
  padding: 15rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.userinfo-container {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.userinfo-avatar-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0;
  padding: 0;
  background-color: transparent;
  line-height: normal;
}

.userinfo-avatar-container::after {
  border: none;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 2rem;
}

.userinfo-nickname {
  width: 60%;
  margin-left: 10rpx;
  font-size: 1.25rem;
}

.userinfo-updateinfo-container {
  padding: 0 10rpx;
  margin: 0;
  border-radius: 1rem;
  background-color: #e2b958;
  display: flex;
  justify-content: center;
  align-items: center;
}

.userinfo-updateinfo-container::after {
  border: none;
}

.userinfo-updateinfo {
  color: #ffffff;
  font-size: 0.8rem;
}

.card-action-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.claim-card-container, .show-card-container {
  padding: 10rpx 10rpx;
  display: flex;
  align-items: center;
}

.claim-card-text, .show-card-text {
  font-weight: bold;
  font-size: 0.95rem;
}

.widget-container {
  height: 160rpx;
  margin: 10rpx 0;
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  border-radius: 0.4rem;
  box-shadow: 0 0 15px -10px #7f88ff;
}

.widget-text {
  font-weight: bold;
  font-size: 1.05rem;
}

.widget-image {
  width: 100rpx;
  height: 100rpx;
}