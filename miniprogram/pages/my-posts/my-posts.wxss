/* pages/my-posts/my-posts.wxss */
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.top-tab {
  width: 100%;
  height: 50rpx;
  padding: 30rpx 0;
  display: flex;
  background-color: #ffffff;
  border-bottom: 1px solid #eeeeee;
}

.top-tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.top-tab-item-border {
  border-right: 1px solid #eeeeee;
}

.top-tab-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.mid-tab {
  width: 100%;
  height: 80rpx;
  background-color: #ffffff;
  display: flex;
}

.mid-tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.mid-tab-text-container {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 2px #ffffff solid;
}

.mid-box-active {
  border-bottom: 2px #da251a solid !important;
}

.mid-tab-text {
  font-size: 0.97rem;
  color: #999999;
}

.mid-text-active {
  color: #000000 !important;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no-post-image {
  margin-top: 150rpx;
  width: 400rpx;
  height: 280rpx;
}

.no-post-text {
  margin-top: 30rpx;
}

.btn-post {
  width: 180rpx;
  height: 70rpx;
  margin-top: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #da251a;
  border-radius: 0.35rem;
}

.btn-post-text {
  color: #ffffff;
  font-size: 1.1rem;
}