/* pages/publish-housing-info/publish-housing-info.wxss */
.container {
  width: 100%;
}

.add-image-container {
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
}

.add-image-border {
  width: 170rpx;
  height: 170rpx;
  border: 1px dashed #cccccc;
}

.add-image-image {
  width: 100%;
  height: 100%;
  border-radius: 0.3rem;
}

.bottom-btn {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: #da251a;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom-btn-text {
  color: #ffffff;
  font-size: 1.1rem;
}