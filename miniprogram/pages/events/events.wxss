/* pages/events/index.wxss */
.container {
  height: 100%;
}

.tab {
  height: 50rpx;
  line-height: 40rpx;
  background-color: #ffffff;
  border-bottom: 1px solid #cecece;
  display: flex;
  justify-content: space-around;
}

.tab-item {
  text-align: center;
  color: #999999;
}

.tab-item.active {
  color: #da251a;
  border-bottom: 2px solid #da251a;
}

.swiper {
  height: calc(100vh - 50rpx - 1px);
}

.no-event-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no-event-image {
  margin-top: 20vh;
  width: 370rpx;
  height: 320rpx;
}

.no-event-text {
  margin-top: 3vh;
  font-size: 0.95rem;
}

.events-container {
  height: 100%;
}

.event-widget {
  height: 515rpx;
  margin: 31rpx 30rpx;
  background-color: #ffffff;
  border-radius: 0.4rem;
  box-shadow: 0 0 15px -10px #7f88ff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.event-image {
  flex: 1.5;
  width: 100%;
  border-top-left-radius: 0.4rem;
  border-top-right-radius: 0.4rem;
}

.event-content {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.event-title {
  padding: 0rpx 20rpx;
  font-weight: bold;
  font-family: 'Times New Roman', Times, sans-serif;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.event-subtitle {
  padding: 0rpx 20rpx;
  display: flex;
  align-items: center;
}

.event-icon {
  width: 27rpx;
  height: 27rpx;
}

.event-location-text {
  margin-left: 10rpx;
  color: #999999;
  font-size: 0.95rem;
  font-family: 'Times New Roman';
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.event-date-text {
  margin-left: 10rpx;
  color: #999999;
  font-size: 0.9rem;
  font-family: 'Times New Roman';
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}