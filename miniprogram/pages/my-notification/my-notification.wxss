.container {
  display: flex;
  flex-direction: column;
}

.btn-panel {
  height: 300rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
}

.button {
  width: 150rpx;
  height: 200rpx;
  display: flex;
