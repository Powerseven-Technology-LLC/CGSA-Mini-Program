<view class="container">
  <view class="row">
    <block wx:for="{{row1Buttons}}" wx:key="*this">
      <view class="button">
        <image class="image" src="{{item.image}}"></image>
        <text class="text">{{item.title}}</text>
      </view>
    </block>
  </view>
  <view class="blank-between-row"></view>
  <view class="row">
    <block wx:for="{{row2Buttons}}" wx:key="*this">
      <view class="button">
        <image class="image" src="{{item.image}}"></image>
        <text class="text">{{item.title}}</text>
      </view>
    </block>
  </view>
</view>