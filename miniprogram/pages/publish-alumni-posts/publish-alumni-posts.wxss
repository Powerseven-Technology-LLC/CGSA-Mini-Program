.container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.topic-container {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  padding: 0 25rpx;
  border-top: 1px solid #eeeeee;
}

.topic-text {
  color: #da251a;
  font-size: 1.1rem;
}

.topic-icon {
  width: 13rpx;
}

.bottom-btn {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: #da251a;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom-btn-text {
  font-size: 1.1rem;
}