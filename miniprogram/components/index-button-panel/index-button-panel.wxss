/* components/index-button-panel/index-button-panel.wxss */
.container {
  background-color: #FFFFFF;
  padding: 35rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 0.4rem;
  box-shadow: 0 0 15px -10px #7f88ff;
}

.row {
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.blank-between-row {
  height: 75rpx;
}

.button {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image {
  height: 90rpx;
  width: 90rpx;
  border-radius: 1.25rem;
}

.text {
  margin-top: 10rpx;
  font-size: 0.8rem;
}