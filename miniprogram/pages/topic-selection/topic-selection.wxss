/* pages/topic-selection/topic-selection.wxss */
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.search-container {
  height: 100rpx;
  padding: 0 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search-box {
  height: 70rpx;
  flex: 8;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  background-color: #ffffff;
  border: 1px solid #e6e6ea;
  border-radius: 1.2rem;
}

.search-image {
  width: 30rpx;
}

.search-input {
  width: 80%;
}

.search-cancel {
  flex: 1;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.topics-container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.topics-header {
  padding: 25rpx 30rpx;
}

.topics-header-text {
  color: #999999;
}

.topics-content {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
}

.topic-row {
  height: 50rpx;
  padding: 20rpx;
  border-bottom: 1px solid #eeeeee;
}

.topic-text-red {
  color: #f74d69;
}

.topic-text {
  margin-left: 10rpx;
}